{
    "manifest_version": 3,
    "name": "IC Helper",
    "version": "1.0",
    "description": "IC交易网助手",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "IC交易网助手"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.ic.net.cn/*"
            ],
            "js": [
                "js/api.js",
                "js/poll.js",
                "js/processSupply.js",
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "*://www.ic.net.cn/*"
    ]
}